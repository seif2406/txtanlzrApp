<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="txtAnalyzerApp.controller.MainController">

    <!-- TOP: The Hero Header with the Centered Button -->
    <top>
        <VBox alignment="CENTER" spacing="15.0" styleClass="header-section">
            <padding>
                <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
            </padding>

            <Label styleClass="app-title" text="Text Analyzer" />

            <Button fx:id="loadBtn" contentDisplay="CENTER" onAction="#onLoadFiles" styleClass="action-button" text="Load Text Files">
                <effect>
                    <!-- subtle shadow for the button -->
                    <DropShadow blurType="GAUSSIAN" height="15.0" radius="7.0" width="15.0">
                        <color>
                            <Color opacity="0.3" />
                        </color>
                    </DropShadow>
                </effect>
            </Button>
        </VBox>
    </top>

    <!-- CENTER: The File List -->
    <center>
        <VBox spacing="10" styleClass="content-area">
            <padding>
                <Insets bottom="20" left="20" right="20" top="10" />
            </padding>
            <!-- Added a placeholder label style inside the list via CSS -->
            <ListView fx:id="filesList" styleClass="custom-list-view" VBox.vgrow="ALWAYS" />
        </VBox>
    </center>

</BorderPane>